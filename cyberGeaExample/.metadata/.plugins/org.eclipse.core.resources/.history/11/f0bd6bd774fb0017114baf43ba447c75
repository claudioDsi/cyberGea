package org.cyberGea.eventGenerators;

public class Camera  extends Sensor{
	Thread t;
	int maturityRate;
	String name;
	
	public Camera(DataPublisher clientReference, int min, int max, String name, String position,int maturity) {
		super(clientReference,min,max,"% of maturity","rawData/camera");
		this.name=name;
		this.maturityRate=maturity;
	}
	
	public void measureMaturity()
	{
		System.out.println(name + " is turn on");
		t = new Thread(this);
		t.start();
	}
	
	public void stopCamera() throws InterruptedException
	{
		this.stopThread();
		System.out.println(name + " is turn off");
	}

}
