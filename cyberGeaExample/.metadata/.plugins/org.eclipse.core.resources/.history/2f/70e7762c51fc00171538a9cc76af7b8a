package org.cyberGea.eventGenerators;

public class Camera  extends Sensor{
	Thread t;
	
	String name;
	int growth;
	
	public Camera(DataPublisher clientReference, int min, int max, String name,int growth) {
		super(clientReference,min,max,"% of maturity","rawData/camera",name);
		this.name=name;
		this.growth=min;
	}
	
	public void measureMaturity()
	{
		System.out.println(name + " is turn on");
		t = new Thread(this);
		t.start();
	}
	
	public void stopCamera() throws InterruptedException
	{
		this.stopThread();
		System.out.println(name + " is turn off");
	}

}
