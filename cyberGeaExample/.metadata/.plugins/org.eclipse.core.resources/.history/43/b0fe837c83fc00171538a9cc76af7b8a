package org.cyberGea.eventGenerators;

public class LightSensor extends Sensor{
	Thread t;
	String name;
	
	
	
	
	public LightSensor(DataPublisher clientReference, int min, int max, String name)
	{
		super(clientReference, min, max, "%", "rawData/light" + name, name);
		this.name = name;
		startLightMeasure();
		
	}
	
	public void startLightMeasure()
	{
		System.out.println(name + " is started");
		t = new Thread(this);
		t.sleep(50);
		t.start();
	}
	
	public void stopLight() throws InterruptedException
	{
		this.stopThread();
		System.out.println(name + " has been stopped");
	}
}
