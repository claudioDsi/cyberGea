package org.cyberGea.eventGenerators;

public class PressureSensor extends Sensor{
	
	int pressure;
	String name;
	Thread t;

	public PressureSensor(DataPublisher clientReference, int min, int max, 
			String name,String position) {
		super(clientReference, min, max, "kg", "rawData/pressure" + name, name, position);	
	
		
		this.name=name;
		startMeasurePressure();
		
		
	}
	
	public void startMeasurePressure() {
		System.out.println("pressure sensor is started");
		System.out.println("the kg of soil is "+ pressure);
		t=new Thread(this);
		t.start();
	}
	
	public void stopMeasure() throws InterruptedException
	{
		this.stopThread();
		System.out.println(name + " has been stopped");
	}

	

}
