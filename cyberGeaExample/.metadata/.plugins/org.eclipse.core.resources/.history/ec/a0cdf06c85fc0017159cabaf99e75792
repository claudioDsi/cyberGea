package org.cyberGea.eventGenerators;

public class AirSensor extends Sensor{
	
	Thread t;
	String name;
	
	
	public AirSensor(DataPublisher clientReference, int min, int max, String name) {
		super(clientReference, min, max, "%", "rawData/air", name);		
		this.name=name;
		startAirControl();
	}
	
	public void startAirControl()
	{
		System.out.println(name + " is started");
		t = new Thread(this);
		t.start();
	}
	
	public void stopAirControl() throws InterruptedException
	{
		this.stopThread();
		System.out.println(name + " has been stopped");
	}

}
